<body>
    <div class="login-container">
        <h1>Welcome to Earth Wallet</h1>
        <p>Securely access your wallet to explore, mine, and manage your coins.</p>
        <button class="login-button" id="connect-wallet">Connect Earth Wallet</button>
        <div class="wallet-info" id="wallet-info"></div>
        <div class="footer">Powered by Earth Wallet</div>
    </div>

    <script>
        const connectWalletButton = document.getElementById('connect-wallet');
        const walletInfo = document.getElementById('wallet-info');

        // Simulated login/signup function
        connectWalletButton.addEventListener('click', () => {
            const savedWallet = localStorage.getItem('walletID');
            if (savedWallet) {
                // Simulate successful wallet connection
                walletInfo.innerHTML = `
                    <p><strong>Connected Wallet:</strong></p>
                    <p>${savedWallet}</p>
                `;
                connectWalletButton.textContent = "Wallet Connected";
                connectWalletButton.disabled = true;
                syncProgress(savedWallet);
            } else {
                // Simulate wallet creation
                const newWallet = generateWalletID();
                localStorage.setItem('walletID', newWallet);
                initializeProgress(newWallet); // Initialize user progress
                walletInfo.innerHTML = `
                    <p><strong>New Wallet Created!</strong></p>
                    <p>${newWallet}</p>
                    <p><strong>Note:</strong> Save your wallet ID securely!</p>
                `;
                connectWalletButton.textContent = "Wallet Connected";
                connectWalletButton.disabled = true;
            }
        });

        // Generate a unique wallet ID
        function generateWalletID() {
            const chars = "ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789";
            let walletID = "EARTH_";
            for (let i = 0; i < 44; i++) {
                walletID += chars.charAt(Math.floor(Math.random() * chars.length));
            }
            return walletID;
        }

        // Initialize new user's progress
        function initializeProgress(walletID) {
            const defaultProgress = {
                walletID: walletID,
                minedCoins: 0,
                totalCoins: 0,
                lastLogin: new Date().toISOString()
            };
            localStorage.setItem("progress", JSON.stringify(defaultProgress));
            console.log("New progress initialized:", defaultProgress);
        }

        // Sync progress when wallet is connected
        function syncProgress(walletID) {
            const progress = JSON.parse(localStorage.getItem("progress"));
            if (progress && progress.walletID === walletID) {
                console.log("Progress synced successfully:", progress);
                alert(`Welcome back! Coins mined: ${progress.minedCoins}, Total: ${progress.totalCoins}`);
            } else {
                console.log("No progress found. Initializing new...");
                initializeProgress(walletID);
            }
        }
    </script>
</body>
